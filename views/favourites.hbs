<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div>
                <ul class="nav nav-pills label">
                    <li><a href="../leagues">Leagues</a></li>
                </ul>
            </div>

            <ul id="favourites">
                {{#each favourites}}
                    {{> favourite }}
                {{/each}}
            </ul>
        </div>
        <!--Form Data... may be replaced with hbs...-->
        <div class="col-md-3">
            <form method="POST" id="favourite-new-form" action="/favourites" class="form-horizontal">
                <fieldset>
                    <legend>New Group:</legend>
                    <div class="form-group">
                        <label for="groupName">GroupName</label>
                        <input type="text" id="groupName" name="groupName" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="teams">Teams:</label>
                        <select name="teams" id="teams" multiple="multiple">
                            {{#each teams}}
                                <option value={{id}}>{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="games">Number of Games to show:</label>
                        <input type="number" id="games" name="games" class="form-control" >
                    </div>

                </fieldset>
                <input type="submit" id="submit-group" value="Create New Favourite" class="btn btn-primary"  formmethod="POST"/>
            </form>

        </div>
    </div>
</div>
<script src="/javascript/favourite.js" type="text/javascript"></script>